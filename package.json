{
	"name": "jobapptracker",
	"module": "src/index.ts",
	"dependencies": {
		"@typescript/native-preview": "^7.0.0-dev.20251013.1",
		"arktype": "^2.1.22",
		"dotenv": "^17.2.3"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.2",
		"@playwright/test": "^1.56.0",
		"@types/bun": "^1.3.0",
		"@types/node": "^24.7.2",
		"find-process": "^2.0.0",
		"htmx.org": "^2.0.7",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.4",
		"memfs": "^4.49.0",
		"neverthrow": "^8.2.0",
		"pdf-lib": "^1.17.1",
		"tree-kill": "^1.2.2"
	},
	"lint-staged": {
		"**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": "biome check --no-errors-on-unmatched --fix"
	},
	"private": true,
	"scripts": {
		"start": "bun run src/index.ts",
		"dev": "bun --watch run src/index.ts",
		"build": "bun build src/index.ts --target bun --outfile dist/jobapptracker",
		"test:all": "bun test:unit && bun test:e2e",
		"test:unit": "bun test",
		"test:unit:ai": "CLAUDECODE=1 bun test",
		"test:coverage": "bun test --coverage",
		"test:coverage:ai": "CLAUDECODE=1 bun test --coverage",
		"test:e2e": "bun scripts/end-to-end.ts",
		"test:e2e:ui": "bun test:e2e --ui",
		"lint": "biome lint",
		"format": "biome format",
		"check": "biome check",
		"fix": "biome check --fix",
		"fixx": "biome check --fix --unsafe",
		"typecheck": "tsgo --noEmit",
		"vet": "bun fixx && bun typecheck && bun test:all",
		"prepare": "husky"
	},
	"type": "module"
}
