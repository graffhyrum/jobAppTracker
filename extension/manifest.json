{
	"manifest_version": 3,
	"name": "Job Application Tracker",
	"version": "1.0.0",
	"description": "Quickly save job applications to your personal job tracker",
	"permissions": ["activeTab", "storage"],
	"host_permissions": ["http://localhost:3000/*"],
	"action": {
		"default_popup": "popup/popup.html",
		"default_icon": {
			"16": "icons/favicon-16x16.png",
			"32": "icons/favicon-32x32.png",
			"48": "icons/favicon-32x32.png",
			"128": "icons/android-chrome-192x192.png",
			"192": "icons/android-chrome-192x192.png"
		}
	},
	"background": {
		"service_worker": "background/service-worker.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content/extractor.js"],
			"run_at": "document_idle"
		}
	],
	"icons": {
		"16": "icons/favicon-16x16.png",
		"32": "icons/favicon-32x32.png",
		"48": "icons/favicon-32x32.png",
		"128": "icons/android-chrome-192x192.png",
		"192": "icons/android-chrome-192x192.png",
		"512": "icons/android-chrome-512x512.png"
	},
	"options_page": "options/options.html"
}
